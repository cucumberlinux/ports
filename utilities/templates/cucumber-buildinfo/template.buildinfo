# Cucumber Linux Buildinfo for insert_package_name

NAME=insert_package_name
TARNAME=insert_package_tarball_name
VERSION=insert_package_version
URL=(insert_package_url)
BUILDDEPS=(insert_package_dependencies)

build () {

	# Extract the source code
	tar -xf "$OWD/$TARNAME-$VERSION.tar.xz" || exit 1
	cd $TARNAME-$VERSION || exit 1

	# Apply any patches located in $OWD/patches
	pkgapi_apply_patches || exit 1

	# Do the actual build
	./configure \
		--prefix=/usr \
		--libdir=/usr/lib${LIBDIRSUFFIX} \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static \
		--build=$CUCARCH-cucumber-linux || exit 1
	# Use pkgapi_make instead of make in order to handle parallel builds.
	pkgapi_make || exit 1
	make install DESTDIR=$DESTDIR || exit 1

	# Strip all of the binaries and libraries in $DESTDIR/ of their
	# debugging symbols.
	pkgapi_strip

	# Copies ths install scripts (slack-desc and doint.sh) from $OWD to
	# $DESTDIR/install, creating $DESTDIR/install if need be.
	pkgapi_copy_package_scripts

}

